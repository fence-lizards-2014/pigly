<h1>Welcome to Pigly</h1>
<% if logged_in? %>
	<%= link_to 'Sign Out', logout_path %>
<% else %>
	<%= link_to 'Sign Up', new_user_path %>
	<%= link_to 'Sign In', new_session_path %>
<% end %>

<%= form_for @restaurant, url: search_restaurants_path do |restaurant_form| %>
<%= restaurant_form.text_field :name %>
<% end %> 

<% if logged_in? %>
	<p>Signed In</p>
	<p>Current User:</p><%= current_user.email %>
<% else %>
	<p>Signed out</p>
<% end %>